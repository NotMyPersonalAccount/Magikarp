{
	"parser": "@typescript-eslint/parser",
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:react/recommended",
		"prettier"
	],
	"plugins": ["@typescript-eslint", "react", "prettier"],
	"rules": {
		"react/react-in-jsx-scope": "off",
		"quotes": ["error", "double"],
		"semi": ["error", "always"]
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}
